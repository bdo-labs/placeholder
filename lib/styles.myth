
.placeholder-wrapper {
  position: relative;
}

.placeholder {
  color: rgb(220,220,220);
  font-size: .7em;
  transition: all .5s ease;
  opacity: 0;
  position: absolute;
  transform: translateY(0px);
  will-change: opacity,transform;
}

.placeholder.dirty {
  transform: translateY(-15px);
  opacity: 1;
  will-change: color;
}

.placeholder.focus {
  color: rgb(46,129,183);
}

input[type="text"],
input[type="email"],
input[type="password"],
input[type="url"],
input[type="date"],
input[type="datetime"],
input[type="dateTimeLocal"],
textarea {
  margin-bottom: 2.5em;
}

